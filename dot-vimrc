hi htmlTagName    guifg=#7ee787
hi htmlTag        guifg=#c9d1d9
hi htmlArg        guifg=#79c0ff
hi javaScript     guifg=#c9d1d9

set laststatus=2
set statusline=%F\ %m\ %r%=%y\ %l:%c\ %p%%
hi StatusLine     guifg=#c9d1d9 guibg=#161b22 gui=none
hi StatusLineNC   guifg=#8b949e guibg=#0d1117 gui=none

let &t_EI = "\e[1 q"
let &t_SI = "\e[5 q"
let &t_SR = "\e[3 q"
